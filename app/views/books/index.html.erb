<head>
    <h4 class= "success"><%= flash[:delete] %></h4>
    <h1 class="headline">Books</h1>
</head>

<body>
    <div class="column">
        <table>
            <tr class="column-headline"> 
                <th>Title</th>
                <th>Body</th>
            </tr>

            <% @books.each do |book| %>
                <tr class="column-item">
                    <td><%= book.title %></td>
                    <td><%= book.body %></td>
                    <td><%= link_to "Show", book_path(book) %></td>
                    <td><%= link_to "Edit", edit_book_path(book) %></td>
                    <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
                </tr>
            <% end %>
            
        </table>
    </div>

    <div class="new">
        <h1 class="new-headline">New book</h1>
            <%= render :partial => "layouts/error_messages"%>


    </div>

</body>




