<div class= "edit">
    <h1>Editing Book</h1>
    <br>

    <%= form_for(@book) do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <br>
        <br>

        <h4>Body</h4>
        <%= f.text_area :body%>
        <br>
        <br>

        <p><%= f.submit "Update Book" %></p>
        <br>

        <p><%= link_to "Show", book_path %> | <%= link_to "Back", books_path %></P>

    <% end %>
</div>